{
  "name": "apos",
  "version": "1.0.0",
  "description": "Apostrophe CMS platform for Vinoways Territoire",
  "main": "app.js",
  "scripts": {
    "start": "node app",
    "dev": "NODE_ENV=development NODE_APP_INSTANCE=larzac nodemon --no-deprecation",
    "build": "NODE_ENV=production node app @apostrophecms/asset:build && npm run sw",
    "fixtures": "NODE_ENV=development NODE_APP_INSTANCE=larzac node --no-deprecation app @apostrophecms/db:fixtures",
    "sw": "workbox injectManifest modules/asset/workbox-config.js",
    "serve": "NODE_ENV=production NODE_APP_INSTANCE=larzac node app",
    "release": "npm install && npm run build && node app @apostrophecms/migration:migrate",
    "lint": "prettier --write '**/*.{js,css,scss}' --config ../package.json --ignore-path ../.prettierignore",
    "test": "NODE_ENV=development NODE_APP_INSTANCE=larzac jest",
    "test:coverage": "NODE_ENV=development NODE_APP_INSTANCE=larzac jest --coverage --verbose",
    "test:watch": "NODE_ENV=development NODE_APP_INSTANCE=larzac jest --watchAll --verbose",
    "test:dev": "npm run test:fixtures && NODE_ENV=development NODE_APP_INSTANCE=test nodemon --no-deprecation",
    "test:fixtures": "NODE_ENV=development NODE_APP_INSTANCE=test node --no-deprecation app @apostrophecms/db:fixtures",
    "task": "NODE_ENV=development NODE_APP_INSTANCE=larzac node app"
  },
  "nodemonConfig": {
    "delay": 100,
    "verbose": false,
    "watch": [
      "./app.js",
      "./config/**/*",
      "./modules/**/*",
      "./public/vue-app/**/*"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "locales/*.json",
      "public/uploads",
      "public/apos-frontend/*.js",
      "data"
    ],
    "ext": "json, js, html, scss, vue"
  },
  "author": "Vinovibes Team",
  "dependencies": {
    "apostrophe": "^3.0.0",
    "config": "^3.3.7",
    "copyfiles": "^2.4.1",
    "express-oas-generator": "^1.0.41",
    "normalize.css": "^8.0.1",
    "pino": "^7.8.0",
    "pino-pretty": "^7.5.3",
    "workbox-cli": "^6.5.1"
  },
  "devDependencies": {
    "jest": "^27.5.1",
    "mock-fs": "^5.1.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.5.1"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/cypress/"
    ],
    "watchPathIgnorePatterns": [
      "jest.json",
      "public/uploads",
      "public/apos-frontend/",
      "data"
    ]
  }
}
